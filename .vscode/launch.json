    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "pythonPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "cwd": "${workspaceFolder}",  // Définit le dossier racine comme répertoire de travail
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Ajoute le dossier racine au chemin Python
            }
        }
    ]
}
